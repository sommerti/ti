<% if @city_results.blank? %>
	<h4>0 city</h4>
<% else %>
	<h4><%= pluralize(@city_results.size, 'city') %>: </h4>
	<div id="map_city_results"></div>
	<table class="table-city-results">
		<%= render partial: 'city_result', collection: @city_results, as: :city_result %>
	</table>
<% end %>

<hr>

<% if @region_results.blank? %>
	<h4>0 region.</h4>
<% else %>
	<h4><%= pluralize(@region_results.size, 'region') %>: </h4>
	<%= render partial: 'region_result', collection: @region_results, as: :region_result %>
<% end %>

<hr>

<% if @country_results.blank? %>
	<h4>0 country.</h4>
<% else %>
	<h4><%= pluralize(@country_results.size, 'country') %>: </h4>
	<%= render partial: 'country_result', collection: @country_results, as: :country_result %>
<% end %>
